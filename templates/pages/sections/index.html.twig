{% extends 'base.html.twig' %}

{% block title %}Sections index{% endblock %}

{% block body %}
    <h1>Sections index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.id }}</td>
                <td>{{ section.title }}</td>
                <td>
                    <a href="{{ path('app_sections_show', {'id': section.id}) }}">show</a>
                    <a href="{{ path('app_sections_edit', {'id': section.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sections_new') }}">Create new</a>
{% endblock %}
