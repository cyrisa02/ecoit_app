{% extends 'base.html.twig' %}

{% block title %}Liste sections
{% endblock %}

{% block body %}

	<div class="container">
		<h1>Liste des sections</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>
					{# <th>Formations</th>
															<th>Leçons</th> #}
					<th>actions</th>

				</tr>
			</thead>
			<tbody>
				{% for section in sections %}
					<tr>
						<td>{{ section.id }}</td>
						<td>{{ section.title }}</td>
						{# <td>{{ section.formations }}</td>
																								<td>{{ section.lessons }}</td> #}

						<td>
							{# <a href="{{ path('app_sections_show', {'id': section.id}) }}">Voir</a> #}
							<a href="{{ path('app_sections_edit', {'id': section.id}) }}">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Aucune section trouvée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn btn-secondary btn-lg" href="{{ path('app_sections_new') }}">Créer une nouvelle section</a>

	</div>


{% endblock %}
