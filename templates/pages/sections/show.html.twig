{% extends 'base.html.twig' %}

{% block title %}Sections
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Section N°:
			{{ section.id }}</h1>


		<table class="table">
			<tbody>

				<tr>
					<th>Titre</th>
					<td>{{ section.title }}</td>
				</tr>
				<tr>
					<th>Formations</th>

					<td>{{ section.formations }}</td>
				</tr>

				<tr>
					<th>Leçons</th>

					<td>{{ section.lessons }}</td>
				</tr>


			</tbody>
		</table>

		<a class="btn btn-secondary btn-lg" href="{{ path('app_sections_index') }}">Retour à la liste</a>

		<a class="btn btn-primary btn-lg" href="{{ path('app_sections_edit', {'id': section.id}) }}">Modifier</a>

		{{ include('pages/sections/_delete_form.html.twig') }}</div>

{% endblock %}
