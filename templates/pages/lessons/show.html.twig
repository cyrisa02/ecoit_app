{% extends 'base.html.twig' %}

{% block title %}Lessons
{% endblock %}

{% block body %}
	<h1>Lessons</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ lesson.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ lesson.title }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ lesson.description }}</td>
			</tr>
			<tr>
				<th>Slug</th>
				<td>{{ lesson.slug }}</td>
			</tr>
			<tr>
				<th>Video</th>
				<td>{{ lesson.video }}</td>
			</tr>
			<tr>
				<th>Is_ended</th>
				<td>{{ lesson.isEnded ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Created_at</th>
				<td>{{ lesson.createdAt ? lesson.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Updated_at</th>
				<td>{{ lesson.updatedAt ? lesson.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_lessons_index') }}">back to list</a>

	<a href="{{ path('app_lessons_edit', {'id': lesson.id}) }}">edit</a>

	{{ include('pages/lessons/_delete_form.html.twig') }}
{% endblock %}
