{% extends 'base.html.twig' %}

{% block title %}Users
{% endblock %}

{% block body %}
	<h1>Users</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>Lastname</th>
				<td>{{ user.lastname }}</td>
			</tr>
			<tr>
				<th>Firstname</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Decription</th>
				<td>{{ user.decription }}</td>
			</tr>
			<tr>
				<th>Picture</th>
				<td>{{ user.picture }}</td>
			</tr>
			<tr>
				<th>Pseudo</th>
				<td>{{ user.pseudo }}</td>
			</tr>
			<tr>
				<th>Created_at</th>
				<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Updated_at</th>
				<td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Is_verified</th>
				<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Is_validInstructor</th>
				<td>{{ user.isValidInstructor ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Reset_token</th>
				<td>{{ user.resetToken }}</td>
			</tr>
			{# <tr>
							<th>PlainPassword</th>
							<td>{{ user.plainPassword }}</td>
						</tr> #}
		</tbody>
	</table>

	<a href="{{ path('app_users_index') }}">back to list</a>

	<a href="{{ path('app_users_edit', {'id': user.id}) }}">edit</a>

	{{ include('pages/users/_delete_form.html.twig') }}
{% endblock %}
