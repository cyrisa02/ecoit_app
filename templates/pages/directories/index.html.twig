{% extends 'base.html.twig' %}

{% block title %}Directories index{% endblock %}

{% block body %}
    <h1>Directories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Slug</th>
                <th>Is_ended</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for directory in directories %}
            <tr>
                <td>{{ directory.id }}</td>
                <td>{{ directory.title }}</td>
                <td>{{ directory.description }}</td>
                <td>{{ directory.slug }}</td>
                <td>{{ directory.isEnded ? 'Yes' : 'No' }}</td>
                <td>{{ directory.createdAt ? directory.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ directory.updatedAt ? directory.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_directories_show', {'id': directory.id}) }}">show</a>
                    <a href="{{ path('app_directories_edit', {'id': directory.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_directories_new') }}">Create new</a>
{% endblock %}
