{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col">
				<h1>Vous souhaitez réaliser une ou plusieurs de nos formations en ligne.</h1>
				<h2>Alors inscrivez-vous.</h2>

				{{ form_start(registrationForm) }}
				<fieldset class="mb-3">
					<legend>Mon identité</legend>
					{{ form_row(registrationForm.lastname) }}
					{{ form_row(registrationForm.firstname) }}
					{{ form_row(registrationForm.email) }}
				</fieldset>

				<fieldset class="mb-3">
					<legend>Mes particularités</legend>
					{{ form_row(registrationForm.decription) }}
					{# {{ form_row(registrationForm.picture) }} #}
					{{ form_row(registrationForm.pseudo) }}


					{{ form_row(registrationForm.formations, {
					                        label: 'Choisissez une ou plusieurs formations'
					                    }) }}


					{#  {{ form_row(registrationForm.directories, {
																																								                        label: 'Choisissez une formation'
																																								                    }) }} #}


				</fieldset>
				{{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
				{{ form_row(registrationForm.is_verified) }}

				{{ form_row(registrationForm.is_validInstructor) }}

				{# {{ form_row(registrationForm.RGPDConsent) }} #}

				<button type="submit" class="btn btn-primary btn-lg my-3">M'inscrire</button>
				<a href="{{ path('app_login') }}" class="btn btn-secondary ms-4">Me connecter</a>

				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>

{% endblock %}
